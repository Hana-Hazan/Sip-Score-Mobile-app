<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/background_cream">

    <!-- תמונה -->
    <ImageView
        android:id="@+id/coffeeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/coffee_image" />

    <!-- טקסטים וכוסות -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coffeeTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latte"
            android:textSize="18sp"
            android:textColor="@color/dark_brown"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café Aroma"
            android:textSize="14sp"
            android:textColor="@color/dark_brown"
            android:layout_marginBottom="4dp"/>

        <!-- דירוג -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/cup1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cup_0"
                android:layout_marginEnd="2dp"/>

            <ImageView android:id="@+id/cup2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cup_0"
                android:layout_marginEnd="2dp"/>

            <ImageView android:id="@+id/cup3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cup_0"
                android:layout_marginEnd="2dp"/>

            <ImageView android:id="@+id/cup4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cup_0"
                android:layout_marginEnd="2dp"/>

            <ImageView android:id="@+id/cup5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cup_0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
