<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <!-- פרטי משתמש -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/profilepic_user2"
            android:layout_marginEnd="8dp"
            android:contentDescription="user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senia63"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 18, 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>
    </LinearLayout>

    <!-- תמונה של הפוסט -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:src="@drawable/sample_post"
        android:contentDescription="post image" />

    <!-- טקסט -->
    <TextView
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All you need for a good day is a good coffee..."
        android:textColor="@color/text_primary"
        android:layout_marginTop="8dp" />

    <!-- אייקונים -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <ImageView android:src="@drawable/ic_like_outline" android:layout_width="24dp" android:layout_height="24dp" android:contentDescription="like"/>
        <ImageView android:src="@drawable/ic_comments" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginStart="16dp" android:contentDescription="comment"/>
        <ImageView android:src="@drawable/ic_share" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginStart="16dp" android:contentDescription="share"/>
    </LinearLayout>
</LinearLayout>
